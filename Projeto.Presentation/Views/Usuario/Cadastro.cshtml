@model Projeto.Presentation.Models.UsuarioCadastroViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SGA - Cadastre-se</title>

    <!--folhas de estilo CSS-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body class="container">

    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-md-center h-100">
                <div class="card-wrapper">
                    <div class="card fat">
                        <div class="card-body">
                            <h4 class="card-title">Crie sua conta</h4>
                            
                            @using (Html.BeginForm("CadastrarUsuario", "Usuario", FormMethod.Post))
                            {
                                <label>Nome do Usuário:</label>
                                @Html.TextBoxFor(model => model.Nome,
                               new
                               {
                                   @class = "form-control",
                                   @placeholder = "Digite aqui"
                               })
                                <span class="text-danger">
                                    @Html.ValidationMessageFor(model => model.Nome)
                                </span>
                                <br />

                                <label>Email de Acesso:</label>
                                @Html.TextBoxFor(model => model.Email,
                               new
                               {
                                   @class = "form-control",
                                   @placeholder = "Digite aqui"
                               })
                                <span class="text-danger">
                                    @Html.ValidationMessageFor(model => model.Email)
                                </span>
                               <br />

                               <label>Senha de Aceso:</label>
                               @Html.PasswordFor(model => model.Senha,
                              new
                              {
                                  @class = "form-control",
                                  @placeholder = "Digite aqui"
                              })
                                <span class="text-danger">
                                    @Html.ValidationMessageFor(model => model.Senha)
                                </span>
                                <br />

                                <label>Confirme seu Acesso:</label>
                                @Html.PasswordFor(model => model.SenhaConfirm,
                               new
                               {
                                   @class = "form-control",
                                   @placeholder = "Digite aqui"
                               })
                                <span class="text-danger">
                                    @Html.ValidationMessageFor(model => model.SenhaConfirm)
                                </span>
                                <br />

                                <input  type="submit" value="Cadastrar Usuário"
                                       class="btn btn-success btn-block"/>
                                       <br />
                                       <br />

                                       <strong>@ViewBag.Mensagem</strong>
                             }

                        </div>
                    </div>
                    <div class="footer">
                        Já tem uma conta? <a href="/Usuario/Login">Entrar</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
   
</body>
</html>
